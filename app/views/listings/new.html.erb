<div class='col-sm-6 col-sm-offset-3'>

<% if @listing.errors.any? %>
  <div class="alert alert-danger">
    <ul>
      <% @listing.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<h3>New Listing</h3>

<%= form_for @listing do |f| %>
  <div class="form-group">
    <%= f.label :book, class: "control-label" %>
    <%= f.select :book_id, options_from_collection_for_select(Book.all, :id, :title, {:selected => @listing.book_id}), {:include_blank => true}, class: "form-control" %>
  </div>
</div>

<div class='col-sm-6 col-sm-offset-3'>
  <div class="form-group">
    <%= f.label :price, class: "control-label" %>
    <div class="input-group">
      <span class="input-group-addon">$</span>
      <%= f.number_field :price, min: 0, step: 0.25, class: "form-control" %>
    </div>
    <p class="help-block">Let's keep things realistic here- we're all students after all.</p>
  </div>

  <div class="form-group">
    <%= f.submit "Submit", class: "btn btn-success rmarg10" %>
    <%= link_to "Cancel", root_path %>
  </div>
<% end %>
</div>
