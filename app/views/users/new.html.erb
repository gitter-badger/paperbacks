<%= render "flash" %>

<section id="content" class="content">

    <div class="container signin border-top">
        <div class="row">
            <div class="col-xs-5">

                <h2>Sign Up</h2>

                <%= form_for @user, url: "/signup", method: "post", class: "form-horizontal" do |f| %>

                  <% @user.errors.full_messages.each do |message| %>
                    <div class="alert-box warning" data-alert>
                      <%= message %>
                      <a href="#" class="close">&times;</a>
                    </div>
                  <% end %>

                  <div class="form-group control-group">
                    <label>Preferred Name</label>
                    <div class="controls">
                      <%= f.text_field :name %>
                    </div>
                  </div>

                  <div class="form-group control-group">
                    <label>Email</label>
                    <div class="controls">
                        <%= f.email_field :email %>
                    </div>
                     <p class="help-block">This email address will be exposed to authenticated users so they may contact you regarding your listings.</p>
                  </div>

                  <div class="form-group control-group">
                    <label>Password</label>
                    <div class="controls">
                      <%= f.password_field :password %>
                    </div>
                  </div>

                  <%= f.submit "Sign Up", class: "btn btn-small btn-primary" %>

                <% end %>

                <br>

                <span>Already have an account? <a href="/login">Log in</a></span>

            </div>
        </div>
    </div>

</section>
