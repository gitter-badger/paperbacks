<div class="col-sm-offset-3 col-sm-6">
  <h2>Sign Up</h2>
  <% unless @user.errors.empty? %>
  <div class="alert alert-danger" role="alert">
    <% @user.errors.full_messages.each do |message| %>
      <p><%= message %></p>
    <% end %>
  </div>
  <% end %>
  <%= form_for @user, url: "/signup", method: "post", class: "form-horizontal" do |f| %>
    <div class="form-group control-group">
      <label>Preferred Name</label>
      <div class="controls">
        <%= f.text_field :name, class: "form-control" %>
      </div>
    </div>
    <div class="form-group control-group">
      <label>Email</label>
      <div class="controls">
        <%= f.email_field :email, class: "form-control" %>
      </div>
      <p class="help-block">
        This email address will be exposed to authenticated
        users so they may contact you regarding your listings.</p>
    </div>
    <div class="form-group control-group">
      <label>Password</label>
      <div class="controls">
        <%= f.password_field :password, class: "form-control" %>
      </div>
    </div>
    <div class="checkbox">
      <label>
        <%= f.check_box :terms_of_service %> I agree to the Paperbacks <a href="#">Terms of Service</a> and <a href="#">Privacy Policy</a>.
      </label>
    </div>
    <div class="form-group">
      <%= f.submit "Sign Up", class: "btn btn-small btn-primary rmarg10" %>
      <%= link_to "Cancel", root_path %>
    </div>
  <% end %>
  <br>
  <span>Already have an account? <a href="/login">Log in</a>.</span>
</div>
