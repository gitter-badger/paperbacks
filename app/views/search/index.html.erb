<h3>Showing results for '<%= params[:name] %>'</h3>
<hr>

<h4>Listings</h4>
<%= render "shared/listings" %>

<h4>Books</h4>
<div class='flex-row'>
  <% @books.each do |book| %>
    <%= link_to book, :class => 'flex-item' do %>
      <img class='artwork' src='http://placehold.it/100x150'>
      <p class='title'><%= book.title %></p>
    <% end %>
  <% end %>
</div>


